{
  "name": "react-training",
  "version": "0.1.0",
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=5.4.2"
  },
  "private": true,
  "dependencies": {
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-scripts": "1.0.14",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:single": "export CI=true && yarn test",
    "eject": "react-scripts eject",
    "lint:eslint": "eslint --ignore-path .gitignore .",
    "lint:staged": "lint-staged",
    "postinstall": "yarn build",
    "start:prod": "serve -s build"
  },
  "devDependencies": {
    "eslint-plugin-prettier": "^2.3.1",
    "lint-staged": "^4.2.3",
    "pre-commit": "^1.2.2",
    "prettier": "^1.7.4"
  },
  "lint-staged": {
    "*.js": "lint:eslint"
  },
  "pre-commit": [
    "lint:staged",
    "test:single"
  ]
}
